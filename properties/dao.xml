<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--  Groups service -->
	<bean id="groupsService" class="org.esco.dynamicgroups.dao.grouper.GrouperDAOServiceImpl"/>
	
	<!-- LDAP SyncRepl client -->
	<bean id="addAction" class=" org.esco.dynamicgroups.dao.ldap.syncrepl.client.AddSyncReplTriggeredAction" />
	<bean id="deleteAction" class=" org.esco.dynamicgroups.dao.ldap.syncrepl.client.DeleteSyncReplTriggeredAction" />
	<bean id="modifyAction" class=" org.esco.dynamicgroups.dao.ldap.syncrepl.client.ModifySyncReplTriggeredAction" />
	<bean id="presentAction" class=" org.esco.dynamicgroups.dao.ldap.syncrepl.client.PresentSyncReplTriggeredAction" />
	
	<bean id="syncReplMessagesHandler" class="org.esco.dynamicgroups.dao.ldap.syncrepl.client.ESCOSyncReplMessagesHandler">
		<property name="addAction" ref="addAction"/>
		<property name="deleteAction" ref="deleteAction"/>
		<property name="modifyAction" ref="modifyAction"/>
		<property name="presentAction" ref="presentAction"/>
	</bean>
	
	<bean id="synReplClient" class="org.esco.dynamicgroups.dao.ldap.syncrepl.client.ESCOSyncReplClient">
		<property name="messagesHandler" ref="syncReplMessagesHandler"/>
	</bean>
	
	<!-- Hibernate SessionFactory -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="configLocation"
			value="classpath:properties/hibernate.cfg.xml" />
        <property name="mappingResources">
            <list>
                <value>properties/mapping/DynAttributes.hbm.xml</value>
                <value>properties/mapping/DynGroups.hbm.xml</value>
                <value>properties/mapping/GroupAttributeValueAssoc.hbm.xml</value>
            </list>
        </property>
    </bean>

    <!-- Transaction manager for a single Hibernate SessionFactory (alternative to JTA) -->
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="daoService" class="org.esco.dynamicgroups.dao.db.HibernateDAOService">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>