<web-app>
   <context-param>
           <description>
                        The location of the main configuration file of the Spring framework.
                </description>
                <param-name>contextConfigLocation</param-name>
                <param-value>
                        classpath:/resources/applicationContext.xml
                </param-value>
        </context-param>

  <listener>
        <listener-class>
                org.springframework.web.context.ContextLoaderListener
        </listener-class>
  </listener>
</web-app>
