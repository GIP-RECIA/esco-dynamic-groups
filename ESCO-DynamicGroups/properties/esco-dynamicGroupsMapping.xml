<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<comment>Dynamic groups LDAP filters configuration.</comment>
	
	<!-- Global settings. -->
	<entry key="esco-dynamicGroups.default.sourceId">esco:ldap</entry>
	<entry key="esco-dynamicGroups.default.searchId">esco-dynamicGroupsSearchId</entry>
	<entry key="esco-dynamicGroups.default.queryParserClass">org.esco.dynamicgroups.query.LDAPFilterQueryParser</entry>

	<!-- Groups settings. -->
	<entry key="PersonnesParCategorie.query">(objectclass=%categorie%)</entry>
	
	<entry key="AnotherOne.query">(objectclass=%categorie%)</entry>
	<entry key="AnotherOne.searchId">another search id </entry>
	<entry key="AnotherOne.sourceId"> anothersource</entry>
	
</properties>